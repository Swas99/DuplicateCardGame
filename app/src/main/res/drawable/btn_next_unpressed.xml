<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp"
                />
            <gradient
                android:angle="90"
                android:startColor="#72FFFFFF"
                android:centerColor="#CFFFFFFF"
                android:endColor="#72FFFFFF"
                />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/img_next"/>
    </item>
    <item>
        <shape  >
            <stroke android:width="1.2dp" android:color="#EFFFFFFF"/>
            <padding android:left="1dp" android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <corners
                android:radius="4dp"
                />
        </shape>
    </item>
</layer-list>
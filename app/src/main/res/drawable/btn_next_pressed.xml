<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="4dp"
                />
            <gradient
                android:angle="90"
                android:startColor="#99FFFFFF"
                android:centerColor="#EEFFFFFF"
                android:endColor="#99FFFFFF"
                />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/img_next"/>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="#AF1122AA"/>
            <corners
                android:radius="4dp"
                />
        </shape>
    </item>
</layer-list>
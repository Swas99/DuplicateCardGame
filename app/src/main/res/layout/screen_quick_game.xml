<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_portrait"
    android:id="@+id/screen_boardDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#36FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Game"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="36sp"
            android:id="@+id/tvTitle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A1000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-5dp"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/mainContainer"
        android:background="#18FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:text="Player Mode : "
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1 P"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:id="@+id/value_1P"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_transparency_20"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2 P"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_transparency_20"
                        android:id="@+id/value_2P"/>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/region_PlayerTwo"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Player 2 : "/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="myClickHandler_QuickGame"
                        android:id="@+id/PlayerTwoType"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_margin="4dp"
                        android:background="@drawable/background_white45_white196_disabled"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <Button
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnPlayerTwoType"
                            android:onClick="myClickHandler_QuickGame"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/region_memory"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Memory : "/>
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:id="@+id/RobotMemory"
                        android:max="9"

                        />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Game Mode : "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Arcade"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_white_transparency_20"
                        android:id="@+id/value_Arcade"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Time-Trail"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_white_transparency_20"
                        android:id="@+id/value_TimeTrial"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/region_TimeTrial"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Time-Trial timer : "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/region_TimeTrialTime_value_buttons">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:text="5s"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_TTT_v1"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="3dp"
                            android:background="@drawable/btn_white_transparency_20"
                            android:textAllCaps="false"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:text="10s"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_TTT_v2"
                            android:textSize="12dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/btn_white_transparency_20"
                            android:textAllCaps="false"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:text="15s"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_TTT_v3"
                            android:textSize="12dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/btn_white_transparency_20"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/TimeTrialTime"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_white_pressed_thin_border"
                        android:visibility="gone"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <Button
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnTimeTrialTime"
                            android:onClick="myClickHandler_QuickGame"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Board Type : "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1 B"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:id="@+id/value_OneBoard"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_transparency_20"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2 B"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:onClick="myClickHandler_QuickGame"
                        android:id="@+id/value_TwoBoard"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_transparency_20"
                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Board Size : "/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingRight="5dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:id="@+id/RowSize"
                        android:gravity="center"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_pressed_thin_border"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="x"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:id="@+id/ColSize"
                            android:gravity="center"
                            android:onClick="myClickHandler_QuickGame"
                            android:layout_margin="4dp"
                            android:background="@drawable/btn_white_pressed_thin_border"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4">
                            <Button
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:background="@drawable/ic_action_edit"
                                android:layout_centerInParent="true"
                                android:id="@+id/btnBoardSize"
                                android:onClick="myClickHandler_QuickGame"
                                />

                        </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Scroll Type : "/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/ScrollType"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_white_pressed_thin_border"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <Button
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnScrollType"
                            android:onClick="myClickHandler_QuickGame"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text="Card Set  : "/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/region_CardSet_Value_buttons">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_CardSetOne"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="3dp"
                            android:text="I"
                            android:background="@drawable/btn_white_transparency_20"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_CardSetTwo"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="3dp"
                            android:text="II"
                            android:background="@drawable/btn_white_transparency_20"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.6"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:onClick="myClickHandler_QuickGame"
                            android:id="@+id/value_CardSetThree"
                            android:layout_margin="3dp"
                            android:text="III"
                            android:background="@drawable/btn_white_transparency_20"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/CardSet"
                        android:onClick="myClickHandler_QuickGame"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_pressed"
                        android:visibility="gone"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <Button
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnCardSet"
                            android:onClick="myClickHandler_QuickGame"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50FFFFFF"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Configuration"
                android:id="@+id/cbSaveConfiguration"
                android:textSize="12sp"
                android:onClick="myClickHandler_QuickGame"
                android:layout_gravity="bottom"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:onClick="myClickHandler_QuickGame"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="Randomize Configuration !"
                    android:id="@+id/btnRandomizeConfiguration"
                    android:background="@drawable/btn_rectangle_sky_blue"
                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="myClickHandler_QuickGame"
            android:background="@drawable/btn_rectangle_sky_blue">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:onClick="myClickHandler_QuickGame"
                android:background="@drawable/img_home"
                />
        </RelativeLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:text="Start"
            android:textColor="@color/white"
            android:onClick="myClickHandler_QuickGame"
            android:id="@+id/btnStart"
            android:background="@drawable/btn_rectangle_sky_blue"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>
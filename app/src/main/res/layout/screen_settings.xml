<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_portrait"
    android:id="@+id/screenSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#36FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="36sp"
            android:id="@+id/tvTitle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A1000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-5dp"
            android:layout_centerInParent="true"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/mainContainer"
        android:background="#18FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Set Default Values"
                android:textSize="16sp"
                android:background="@color/white_transparent_60"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Player 1 Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_centerInParent="true"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/PlayerOneName"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_white_reverse"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnPlayerOneName"
                            />

                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#28FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Player 2 Name"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_centerInParent="true"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/PlayerTwoName"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_white_reverse"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnPlayerTwoName"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#28FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="One Touch Flip"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_centerInParent="true"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:background="@drawable/btn_white_reverse"
                    android:id="@+id/OneTouchFlip"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#28FFFFFF"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Locking Time"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_centerInParent="true"
                        >
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/btn_white_reverse"
                        android:id="@+id/LockingTime"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_action_edit"
                            android:layout_centerInParent="true"
                            android:id="@+id/btnLockingTime"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:textSize="10dp"
                android:text="Locking time is the time after which the current card-pair is locked, for a mis-matched move"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#28FFFFFF"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="32dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Restore Default Values"
                        android:id="@+id/btnRestoreDefaults"
                        android:background="@drawable/btn_rectangle_sky_blue"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#28FFFFFF"/>



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="Home"
            android:id="@+id/btnBack"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_white"
            />
    </RelativeLayout>


</LinearLayout>
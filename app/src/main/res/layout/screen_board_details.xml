<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_portrait"
    android:id="@+id/screen_boardDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#36FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Board Details"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="36sp"
            android:id="@+id/tvTitle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#A1000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-5dp"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/mainContainer"
        android:background="#18FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:paddingTop="5dp"
                        android:text="Board Type"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#28FFFFFF"
                        android:layout_marginBottom="5dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="1 Board"
                        android:id="@+id/value_OneBoard"
                        android:onClick="myClickHandler_BoardDetails"
                        android:background="@drawable/btn_white_transparency_20"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="2 Board"
                        android:id="@+id/value_TwoBoard"
                        android:onClick="myClickHandler_BoardDetails"
                        android:background="@drawable/btn_white_transparency_20"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#72FFFFFF"
                        android:layout_margin="2dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:paddingTop="5dp"
                        android:text="Board Size"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#28FFFFFF"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="10dp"
                            android:layout_height="match_parent"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:text="X"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/RowSize"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_pressed_thin_border"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:text="x"
                            android:gravity="center"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="Y"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/ColSize"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_pressed_thin_border"
                            />

                        <RelativeLayout
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:clickable="true"
                            android:id="@+id/btnBoardSize"
                            android:onClick="myClickHandler_BoardDetails"
                            >
                            <TextView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:background="@drawable/ic_action_edit"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#72FFFFFF"
                        android:layout_margin="2dp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:text="Card Set : "
                        android:textColor="@color/black"/>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#28FFFFFF"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="9dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="I"
                            android:id="@+id/value_CardSetOne"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="II"
                            android:id="@+id/value_CardSetTwo"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="III"
                            android:id="@+id/value_CardSetThree"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/CardSet"
                            android:visibility="gone"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_pressed_thin_border"/>

                        <RelativeLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:id="@+id/btnCardSet"
                            android:clickable="true"
                            android:onClick="myClickHandler_BoardDetails">
                            <TextView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:background="@drawable/ic_action_edit"
                                android:layout_centerInParent="true"
                                />

                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#72FFFFFF"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="21dp"
                            android:paddingTop="5dp"
                            android:text="Scroll Type"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#28FFFFFF"
                            android:layout_marginBottom="11dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="No Scroll"
                            android:id="@+id/value_noScroll"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Vertical"
                            android:id="@+id/value_verticalScroll"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Horizontal"
                            android:id="@+id/value_horizontalScroll"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="Both"
                            android:id="@+id/value_bothScroll"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_transparency_20"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#72FFFFFF"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/region_TimeTrial">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="21dp"
                            android:paddingTop="5dp"
                            android:text="Time-Trial time : "
                            android:textColor="@color/black"
                            android:gravity="center" />
                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#28FFFFFF"
                            android:layout_marginBottom="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="9dp"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="5 sec"
                                android:id="@+id/TimeTrialTime"
                                android:onClick="myClickHandler_BoardDetails"
                                android:background="@drawable/btn_white_pressed_thin_border"/>
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:id="@+id/btnTimeTrialTime"
                                android:onClick="myClickHandler_BoardDetails">
                                <TextView
                                    android:layout_width="27dp"
                                    android:layout_height="27dp"
                                    android:background="@drawable/ic_action_edit"
                                    android:layout_centerInParent="true"
                                    />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#90FFFFFF"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="One Touch Flip"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />
                    <RelativeLayout
                        android:layout_width="18dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="On"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black"
                            android:id="@+id/OneTouchFlip"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_reverse"/>

                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#90FFFFFF"
                    android:layout_margin="5dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="Locking Time"
                        android:textColor="@color/black"
                        android:gravity="center_vertical" />

                    <RelativeLayout
                        android:layout_width="18dp"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:text="600 ms"
                            android:layout_gravity="center"
                            android:id="@+id/LockingTime"
                            android:onClick="myClickHandler_BoardDetails"
                            android:background="@drawable/btn_white_pressed_thin_border"/>

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:id="@+id/btnLockingTime"
                            android:onClick="myClickHandler_BoardDetails">
                            <TextView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_action_edit"
                                />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#90FFFFFF"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/region_boardBackground">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:text="Background : "
                        android:gravity="center"
                        android:layout_gravity="center"
                        />

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#28FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="4dp">

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:clickable="true"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_back"
                            android:id="@+id/previousBoardBackground"
                            android:onClick="myClickHandler_BoardDetails"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:background="@color/lemon_grass"
                            android:id="@+id/ivBoardBackground"
                            android:onClick="myClickHandler_BoardDetails"/>


                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:clickable="true"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_next"
                            android:id="@+id/nextBoardBackground"
                            android:onClick="myClickHandler_BoardDetails"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="myClickHandler_BoardDetails"
            android:background="@drawable/btn_rectangle_sky_blue">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_home"
                android:onClick="myClickHandler_BoardDetails"
                />
        </RelativeLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Start"
            android:id="@+id/btnStart"
            android:textColor="@color/white"
            android:background="@drawable/btn_rectangle_sky_blue"
            android:layout_alignParentRight="true"
            android:onClick="myClickHandler_BoardDetails"/>
    </RelativeLayout>


</LinearLayout>
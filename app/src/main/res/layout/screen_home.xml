<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/home_background_portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="118dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:orientation="vertical"
            android:id="@+id/header">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#09FFFFFF">
                <TextView
                    android:id="@+id/tvHeader_1"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:padding="5dp"
                    android:text="Howdy"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coinSection" >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/ivCoins"
                        android:background="@drawable/coin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:id="@+id/tvCoins"
                        android:layout_toLeftOf="@+id/ivCoins"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_secondRow"
                android:background="#09FFFFFF">
                <TextView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:id="@+id/firstContainer_SecondRow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/secondContainer_SecondRow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="27dp"
                    android:padding="5dp"
                    android:text="Howdy"
                    android:textSize="12dp"
                    android:id="@+id/tvHeader_2"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/title_thirdRow"
                android:background="#19FFFFFF">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:id="@+id/tvHeader_3"
                    android:text="Challenge Reward "
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAccept"
                    android:text="Accept"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/btn_white"/>
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnDecline"
                    android:text="Decline"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/btn_white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:id="@+id/mainButtons"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Quick Game "
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/btnQuickGame"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_quick_game"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Arcade "
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:id="@+id/btnArcade"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_arcade"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp" />

                <RelativeLayout
                    android:id="@+id/btnGameLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_game_logo"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingBottom="2dp"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="@color/black"
                            android:textSize="23dp"
                            android:text="2"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|top"
                            android:textColor="@color/black"
                            android:textSize="23dp"
                            android:text="CARDS"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=" Story Mode"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:id="@+id/btnStoryMode"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_story_mode"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=" Time Trial"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:id="@+id/btnTimeTrial"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_time_trial"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/optionButtons"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/btnHelp"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="\?"
                                android:textSize="20dp"
                                android:textColor="@color/white"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_oval_sky_blue"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/btnStore"
                                android:layout_width="66dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="35dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_oval_sky_blue"
                                />
                            <Button
                                android:id="@+id/btn_store"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="35dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_store"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/btnTopScores"
                                android:layout_width="66dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="35dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_oval_sky_blue"
                                />
                            <Button
                                android:id="@+id/btn_topScores"
                                android:layout_width="31dp"
                                android:layout_height="29dp"
                                android:layout_marginTop="35dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_top_scores"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/btnSettings"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_oval_sky_blue"
                                />
                            <Button
                                android:id="@+id/btn_settings"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_settings"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="7dp"
                                android:layout_alignParentRight="true"
                                >
                                <Button
                                    android:id="@+id/btnRating"
                                    android:layout_width="55dp"
                                    android:layout_height="36dp"
                                    android:onClick="myClickHandler"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/btn_oval_sky_blue"
                                    />
                                <Button
                                    android:id="@+id/btn_rating"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:onClick="myClickHandler"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/btn_rating"
                                    />

                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/btnFb"
                                android:layout_width="55dp"
                                android:layout_height="36dp"
                                android:layout_marginTop="18dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_oval_sky_blue"
                                />
                            <Button
                                android:id="@+id/btn_fb"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="18dp"
                                android:onClick="myClickHandler"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_fb"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_alignParentLeft="true">
                                <Button
                                    android:id="@+id/btnShare"
                                    android:layout_width="55dp"
                                    android:layout_height="36dp"
                                    android:onClick="myClickHandler"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/btn_oval_sky_blue"
                                    />
                                <Button
                                    android:id="@+id/btn_share"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:onClick="myClickHandler"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/btn_share"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="Exit"
                    android:id="@+id/btnExit"
                    android:onClick="myClickHandler"
                    android:background="@drawable/btn_white_transparency_20"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>